@using static CarPortal.Common.GeneralApplicationConstants
@{
    Layout = null;
}

<style>
	.footer {
		position: absolute;
		bottom: 0;
		width: 100%;
		white-space: nowrap;
		line-height: 60px;
	}
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarPortal.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarPortal.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/photos/textLogo.png" width="140" height="60" class="justify-content-center" alt="">
                </a>
	            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
		            <ul class="navbar-nav flex-grow-1">
			            <li class="nav-item">
				            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
			            </li>
			            <li class="nav-item">
				            <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="MyOffers">MyOffers</a>
			            </li>
		            </ul>
                    <partial name="_RightNavPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light bg-dark">
        <div class="container">
            &copy; @ReleaseYear
            @if (DateTime.UtcNow.Year != ReleaseYear)
            {
                @Html.Raw($" - {DateTime.UtcNow.Year}")
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
