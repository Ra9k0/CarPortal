<style>
/*Card*/

	.card {
		--main-color: #323232;
		--sub-color: #00587A;
		--bg-color: #E7E7DE;
		--accent-color: #00587A;
		background-color: var(--bg-color);
		border-radius: 25px;
		box-shadow: 0px 0px 5px -1.5px #000;
		cursor: pointer;
		display: flex;
		flex-direction: column;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		gap: 5px;
		margin-bottom: 30px;
		margin-left: 30px;
		margin-top: 30px;
		padding: 25px;
		position: relative;
		transition: all 0.2s;
		width: 400px;
	}

	.card::before {
		background: var(--sub-color);
		border-radius: 25px;
		content: '';
		height: 99%;
		left: 1px;
		position: absolute;
		top: 1px;
		transition: all 0.3s;
		width: 99%;
		z-index: -1;
	}

	.card__wrapper {
		align-items: center;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}

	.card__img { width: 100%; }

	.card__title {
		color: var(--main-color);
		font-size: 25px;
		font-weight: 900;
	}

	.card__subtitle {
		color: var(--sub-color);
		font-size: 20px;
		font-weight: 600;
	}

	.card__icon {
		height: 40px;
		transform: rotate(-45deg);
		transition: all 0.3s;
		width: 40px;
	}

	.card__icon svg {
		height: 100%;
		width: 100%;
	}

	.card__icon g { fill: var(--main-color); }

	.card__icon circle, polyline, line { stroke: var(--main-color); }

	.card:hover .card__icon { transform: rotate(0); }

	.card:hover .card__icon circle, .card:hover .card__icon polyline, .card:hover .card__icon line { stroke: var(--accent-color); }

	.card:hover .card__icon g { fill: var(--accent-color); }

	.card:hover { box-shadow: 0px 0px 20px -5px #000; }

	.card:hover::before {
		box-shadow: 0px 0px 20px -5px #000;
		transform: rotate(10deg);
	}

	.text-decoration { text-decoration: none; }

	button {
		background: transparent;
		border: 0;
		cursor: pointer;
		display: inline-block;
		font-family: inherit;
		font-size: inherit;
		outline: none;
		padding: 0;
		position: relative;
		text-decoration: none;
		vertical-align: middle;
	}
</style>

<div class="row">
	@foreach (var item in ViewBag.CarsToShow)
	{
		<div class="card">

			<form method="get"asp-area="" asp-controller="Offer" asp-action="Edit" asp-route-id="@item.Id">
				<button style="margin-left: 150px;" class="btn btn-primary" type="submit">Edit</button>
			</form>
			<form method="post" asp-area="" asp-controller="Offer" asp-action="Delete" asp-route-id="@item.Id">
				<button style="margin-left: 141px;" class="btn btn-danger" type="submit">Delete</button>
			</form>
			<a asp-area="" asp-controller="Offer" asp-action="Details" asp-route-offerId="@item.Id" class="text-decoration">
				<div class="card__img">
					<img src="~/@item.Images.PhotoPath" class="card-img-top" height="225px" />
				</div>
				<div class="card__title">@item.Title</div>
				<div class="card__wrapper">
					<div class="card__subtitle">@item.Price lv.</div>
					<div class="card__icon">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" style="user-select: none; width: 100%; height: 100%; display: inline-block; fill: rgb(224, 223, 220); flex-shrink: 0; cursor: auto;" color="rgb(224, 223, 220)">
							<g color="rgb(224, 223, 220)">
								<circle cx="128" cy="128" r="96" opacity="0.2"></circle><circle cx="128" cy="128" r="96" fill="none" stroke="rgb(224, 223, 220)" stroke-miterlimit="10" stroke-width="16"></circle><polyline points="134.1 161.9 168 128 134.1 94.1" fill="none" stroke="rgb(224, 223, 220)" stroke-linecap="round" stroke-linejoin="round" stroke-width="16"></polyline><line x1="88" y1="128" x2="168" y2="128" fill="none" stroke="rgb(224, 223, 220)" stroke-linecap="round" stroke-linejoin="round" stroke-width="16"></line>
							</g>
						</svg>
					</div>

				</div>
			</a>
		</div>
	}
</div>