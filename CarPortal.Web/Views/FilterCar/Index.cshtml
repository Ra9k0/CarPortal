@model CarPortal.Web.ViewModels.FilterCar.FilterCarViewModel
@{
	bool isGetRequest = string.Equals(Context.Request.Method, "GET", StringComparison.OrdinalIgnoreCase);
	bool isPostRequest = string.Equals(Context.Request.Method, "POST", StringComparison.OrdinalIgnoreCase);
}
<style>

	.filter-card {
		width: auto;
		height: auto;
		border-radius: 30px;
		background: #00587A;
		box-shadow: 15px 15px 30px rgb(25, 25, 25),
		            -15px -15px 30px rgb(60, 60, 60);
	}

	/*Card*/
	.card {
		--main-color: #323232;
		--sub-color: #00587A;
		--bg-color: #E7E7DE;
		--accent-color: #00587A;
		margin-left: 30px;
		margin-bottom: 30px;
		margin-top: 30px;
		position: relative;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		width: 400px;
		padding: 25px;
		border-radius: 25px;
		display: flex;
		flex-direction: column;
		gap: 5px;
		background-color: var(--bg-color);
		transition: all 0.2s;
		cursor: pointer;
		box-shadow: 0px 0px 5px -1.5px #000;
	}

	.card::before {
		content: '';
		width: 99%;
		height: 99%;
		background: var(--sub-color);
		position: absolute;
		z-index: -1;
		top: 1px;
		left: 1px;
		border-radius: 25px;
		transition: all 0.3s;
	}

	.card__wrapper {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}

	.card__img {
		width: 100%;
	}

	.card__title {
		color: var(--main-color);
		font-weight: 900;
		font-size: 25px;
	}

	.card__subtitle {
		color: var(--sub-color);
		font-weight: 600;
		font-size: 20px;
	}

	.card__icon {
		width: 40px;
		height: 40px;
		transform: rotate(-45deg);
		transition: all 0.3s;
	}

	.card__icon svg {
		width: 100%;
		height: 100%;
	}

	.card__icon g {
		fill: var(--main-color);
	}

	.card__icon circle, polyline, line {
		stroke: var(--main-color);
	}

	.card:hover .card__icon {
		transform: rotate(0);
	}

	.card:hover .card__icon circle, .card:hover .card__icon polyline, .card:hover .card__icon line {
		stroke: var(--accent-color);
	}

	.card:hover .card__icon g {
		fill: var(--accent-color);
	}

	.card:hover {
		box-shadow: 0px 0px 20px -5px #000;
	}

	.card:hover::before {
		transform: rotate(10deg);
		box-shadow: 0px 0px 20px -5px #000;
	}

	.text-decoration {
		text-decoration: none;
	}

	button {
		position: relative;
		display: inline-block;
		cursor: pointer;
		outline: none;
		border: 0;
		vertical-align: middle;
		text-decoration: none;
		background: transparent;
		padding: 0;
		font-size: inherit;
		font-family: inherit;
	}
	
	/*Back-button*/
	.btn-class-name {
		--primary: 80, 180, 250;
		--secondary: 255, 255, 255;
		border-radius: .6em;
		transition: .3s;
		background: #00587A;
		color:white;
		font-family: sans-serif;
		font-weight: bold;
		font-size: 16px;
		cursor: pointer;
		letter-spacing: 0.05em;
		border: none;
		outline: none;
		width: 100px;
		height: 45px;
	}

	.btn-class-name:hover {
		filter: brightness(1.2);
			box-shadow: 0 0 0 5 #E7E7DE;
	}

	.btn-class-name:active {
		transition: 0s;
		box-shadow: 0 0 0 5px #ffffff;
	}

	/*search-button*/
	.btn-class-name-search {
		--primary: 80, 180, 250;
		--secondary: 255, 255, 255;
		border-radius: .6em;
		transition: .3s;
		background: #E7E7DE;
		color: #00587A;
		font-family: sans-serif;
		font-weight: bold;
		font-size: 16px;
		cursor: pointer;
		letter-spacing: 0.05em;
		border: none;
		outline: none;
		width: 100px;
		height: 45px;
	}

	.btn-class-name-search:hover {
		filter: brightness(1.2);
		box-shadow: 0 0 0 5 #E7E7DE;
	}

	.btn-class-name-search :active {
		transition: 0s;
		box-shadow: 0 0 0 5px #ffffff;
	}
	
</style>

<body style="background-color:#008891">
@if (isGetRequest)
{
	<div class="filter-card">
		<form style="margin: 50px;" asp-action="Index" method="post">
			<div class="row">
				<div class="form-group col-md-6">
					<div style="padding-top: 8px; padding-right: 7px;">
							<label asp-for="Car.Model.Category" style="color: #E7E7DE"></label>
						<select asp-for="Car.Model.CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
							<option value="0">all</option>
						</select>
					</div>
				</div>
			</div>
			<div class="row">
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label asp-for="Car.Model.Make" style="color: #E7E7DE"></label>
					<select asp-for="Car.Model.MakeId" class="form-control">
						<option value="0">all</option>
					</select>
				</div>
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label asp-for="Car.Model" style="color: #E7E7DE"></label>
					<select asp-for="Car.ModelId" class="form-control">
						<option value="0">all</option>
					</select>
				</div>
			</div>
			<div class="row">
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label asp-for="Price" style="color: #E7E7DE">Maximum Price</label>
					<input asp-for="Price" type="text" class="form-control">
				</div>
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label asp-for="Car.ManufactureYear" style="color: #E7E7DE">Minimum Year</label>
					<input asp-for="Car.ManufactureYear" type="text" class="form-control">
				</div>
			</div>
			<div class="row">
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label style="color: #E7E7DE">EngineType</label>
					<select asp-for="Car.EngineTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.EngineTypes, "Id", "Type"))">
						<option value="0">all</option>
					</select>
				</div>
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label style="color: #E7E7DE">Color</label>
					<select asp-for="Car.ColorId" class="form-control" asp-items="@(new SelectList(ViewBag.Colors, "Id", "Name"))">
						<option value="0">all</option>
					</select>
				</div>
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label style="color: #E7E7DE">Condition</label>
					<select asp-for="Car.ConditionId" class="form-control" asp-items="@(new SelectList(ViewBag.Conditions, "Id", "Name"))">
						<option value="0">all</option>
					</select>
				</div>
			</div>
			<div class="row">
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label style="color: #E7E7DE">Region</label>
					<select asp-for="RegionId" class="form-control" asp-items="@(new SelectList(ViewBag.Regions, "Id", "Name"))">
						<option value="0">all</option>
					</select>
				</div>
				<div style="padding-top: 8px; padding-right: 7px;" class="col">
						<label style="color: #E7E7DE">Order by</label>
					<select class="form-control" name="orderer">
						<option value="CreatedOnDescending">Upload Date: Newest First</option>
						<option value="CreatedOnAscending">Upload Date: Oldest First</option>
						<option value="PriceAscending">Price: Low to High</option>
						<option value="PriceDescending">Price: High to Low</option>
					</select>
				</div>
			</div>
				<button style="margin: 20px;" class="btn-class-name-search" type="submit">Search</button>
		</form>
	</div>
}
@if (isPostRequest)
	{
		<form asp-action="Index" method="get">
		<button type="submit" class="btn-class-name">
			&lt; Back
		</button>
	    </form>
	}
	<div class="row">
	@foreach (var item in ViewBag.CarsToShow)
	{
		<div class="card">
			<form asp-controller="Profile" asp-action="Like" asp-route-id="@item.Id">
				
			</form>
			<a asp-controller="Offer" asp-action="Details" asp-route-offerId="@item.Id" class="text-decoration">
				<div class="card__img"><img src="@item.Images.PhotoPath" class="card-img-top" height="225px"/></div>
				<div class="card__title">@item.Title</div>
				<div class="card__wrapper">
					<div class="card__subtitle">@item.Price lv.</div>
					<div class="card__icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" style="user-select: none; width: 100%; height: 100%; display: inline-block; fill: rgb(224, 223, 220); flex-shrink: 0; cursor: auto;" color="rgb(224, 223, 220)"><g color="rgb(224, 223, 220)"><circle cx="128" cy="128" r="96" opacity="0.2"></circle><circle cx="128" cy="128" r="96" fill="none" stroke="rgb(224, 223, 220)" stroke-miterlimit="10" stroke-width="16"></circle><polyline points="134.1 161.9 168 128 134.1 94.1" fill="none" stroke="rgb(224, 223, 220)" stroke-linecap="round" stroke-linejoin="round" stroke-width="16"></polyline><line x1="88" y1="128" x2="168" y2="128" fill="none" stroke="rgb(224, 223, 220)" stroke-linecap="round" stroke-linejoin="round" stroke-width="16"></line></g></svg></div>

				</div>
			</a>
		</div>
	}
</div>
</body>
@section scripts{
	<script>
		$(document).ready(function () {
			$("select[name='Car\\.Model\\.CategoryId']").change(function () {
				var selectedMakeId = $(this).val();

				$.ajax({
					url: "/AddOffer/GetMakesList",
					type: "GET",
					data: { id: selectedMakeId },
					success: function (data) {
						var modelDropdown = $("select[name='Car\\.Model\\.MakeId']");
						modelDropdown.empty();

						$.each(data, function (index, model) {
							modelDropdown.append($('<option></option>').val(model.id).text(model.name));
						});
					},
					error: function (xhr, status, error) {
						console.log(error);
					}
				});
			});
			$("select[name='Car\\.Model\\.MakeId']").change(function () {
				var selectedMakeId = $(this).val();
				var selectedCategoryId = $("select[name='Car\\.Model\\.CategoryId']").val();

				$.ajax({
					url: "/AddOffer/GetModelsList",
					type: "GET",
					data: { id: selectedMakeId, categoryId: selectedCategoryId },
					success: function (data) {
						var modelDropdown = $("select[name='Car\\.ModelId']");
						modelDropdown.empty();

						$.each(data, function (index, model) {
							modelDropdown.append($('<option></option>').val(model.id).text(model.name));
						});
					},
					error: function (xhr, status, error) {
						console.log(error);
					}
				});
			});
		});

	</script>
	<partial name="_ValidationScriptsPartial" />
}